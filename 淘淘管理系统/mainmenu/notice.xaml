<UserControl x:Class="淘淘管理系统.page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="900">
    <Grid>
        <ListView x:Name="listbox1"  ItemsSource="{Binding }" Focusable="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel>
                            <Label Content="{Binding title}" Margin="5" FontSize="18" Background="#eeeeee" FontFamily="Microsoft YaHei" Width="950"></Label>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="{Binding context}" Margin="5" FontSize="12" FontFamily="Microsoft YaHei" Width="950"></Label>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
